#include<stdio.h>
int main()
{
    // Number of rows
    int N = 5;

    // Outer loop runs N times, once for each row
    for (int i = 1; i <= N; i++) {
          // Inner loop prints 'i - 1' spaces
        for (int j = 1; j <= i - 1; j++) {
            cout << "  ";
        }
          
        // Inner loop prints 'N - i + 1' stars
        for (int j = 1; j <= N - i + 1; j++) {
            cout << "*";
        }
        // Move to the next line
        cout << "\n";
    }

    return 0;
}
